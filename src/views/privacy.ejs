      top: 50%;
      left: 50%;
      min-width: 100%;
      min-height: 100%;
      width: auto;
      height: auto;
      z-index: 1;
      transform: translate(-50%, -50%);
      object-fit: cover;
      filter: brightness(0.5);
    }

    .hero-content {
      position: relative;
      z-index: 2;
    }

    .hero h1 {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }

    .hero p {
      font-size: 1.2rem;
      color: #f8f9fa;
    }

    /* Cards */
    .card {
      border: none;
      cursor: pointer;
      border-radius: 1rem;
      background-color: #ffffff;
      overflow: hidden;
      box-shadow: 0 8px 20px rgba(0,0,0,0.05);
      transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

    .card:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    }

    .card-header {
      font-weight: 600;
      font-size: 1.1rem;
      color: #0d6efd;
      border-bottom: 1px solid #e9ecef;
      background-color: #ffffff;
    }

    .card-body p, .card-body ul {
      font-size: 0.95rem;
      line-height: 1.6;
      color: #495057;
    }

    /* Scroll animation */
    .reveal {
      opacity: 0;
      transform: translateY(40px);
      transition: all 0.8s ease;
    }

    .reveal.active {
      opacity: 1;
      transform: translateY(0);
    }

    /* Footer */
    footer {
      background-color: #ffffff;
      border-top: 1px solid #dee2e6;
      padding: 2rem 1rem;
      text-align: center;
      color: #6c757d;
    }

    /* Section spacing */
    .section {
